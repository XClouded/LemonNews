<?xml version="1.0" encoding="utf-8"?>
<resources>
     <style name="Transparent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>   
    <style name="progressStyle">
        <item name="android:maxWidth">48.0dip</item>
        <item name="android:maxHeight">48.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading_white</item>
        <item name="android:minWidth">48.0dip</item>
        <item name="android:minHeight">48.0dip</item>
    </style>
    <style name="progressStyleMain">
        <item name="android:maxWidth">32.0dip</item>
        <item name="android:maxHeight">32.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
        <item name="android:minWidth">32.0dip</item>
        <item name="android:minHeight">32.0dip</item>
    </style>
    <style name="main_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check</item>
    </style>
    <style name="sub_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@null</item>
        <item name="android:button">@drawable/btn_check_article</item>
    </style>
</resources>